@using Microsoft.CodeAnalysis.Differencing
@model RegisterViewModel
@{
    ViewData["Title"] = "إنشاء حساب جديد";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام سقيا لإدارة المياه</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        /* نظام الألوان الموحد */
        :root {
        --primary-bg: #F8F9FA;
        --card-bg: #FFFFFF;
        --primary-color: #0077B6;
        --secondary-color: #90E0EF;
        --accent-color: #00B4D8;
        --text-dark: #343A40;
        --text-light: #FFFFFF;
        --input-bg: #F8F9FA;
        --input-border: #CED4DA;
        --button-edit: #FFA500;
        --button-details: #023E8A;
        --button-delete: #DC3545;
        }

        * {
        font-family: 'Cairo', sans-serif;
        }

        body {
        background-color: var(--primary-bg);
        min-height: 100vh;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        }

        body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
        radial-gradient(circle at 20% 80%, rgba(0, 119, 182, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(144, 224, 239, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 40% 40%, rgba(0, 180, 216, 0.05) 0%, transparent 50%);
        z-index: -1;
        }

        .main-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        }

        .register-wrapper {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 1400px;
        width: 100%;
        gap: 4rem;
        }

        /* قسم الترحيب */
        .welcome-section {
        flex: 1;
        text-align: center;
        color: var(--text-dark);
        }

        .logo-container {
        background: var(--accent-color);
        width: 120px;
        height: 120px;
        border-radius: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
        box-shadow: 0 20px 40px rgba(0, 180, 216, 0.3);
        position: relative;
        }

        .logo-container::before {
        content: '';
        position: absolute;
        inset: -2px;
        background: linear-gradient(45deg, var(--primary-color), var(--accent-color), var(--secondary-color));
        border-radius: 26px;
        z-index: -1;
        }

        .logo-container i {
        font-size: 3.5rem;
        color: white;
        filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
        }

        .welcome-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--text-dark);
        }

        .welcome-subtitle {
        font-size: 1.1rem;
        color: var(--text-dark);
        line-height: 1.6;
        margin-bottom: 0.5rem;
        }

        /* بطاقة التسجيل */
        .register-card {
        background: var(--card-bg);
        border-radius: 24px;
        padding: 3rem;
        width: 100%;
        max-width: 600px;
        position: relative;
        box-shadow: 
        0 25px 50px rgba(0, 0, 0, 0.1),
        0 0 0 1px rgba(0, 0, 0, 0.05);
        }

        .register-card::before {
        content: '';
        position: absolute;
        inset: -2px;
        background: linear-gradient(45deg, var(--primary-color), var(--accent-color), var(--secondary-color));
        border-radius: 26px;
        z-index: -1;
        opacity: 0.8;
        }

        .register-header {
        text-align: center;
        margin-bottom: 2.5rem;
        }

        .register-title {
        color: var(--text-dark);
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        }

        .register-subtitle {
        color: var(--text-dark);
        font-size: 0.95rem;
        }

        /* حقول الإدخال */
        .form-group {
        margin-bottom: 1.5rem;
        position: relative;
        }

        .form-label {
        color: var(--text-dark);
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        display: block;
        font-weight: 500;
        }

        .form-control, .form-select {
        background: var(--input-bg);
        border: 1px solid var(--input-border);
        border-radius: 12px;
        color: var(--text-dark);
        padding: 0.875rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
        background: var(--input-bg);
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(0, 119, 182, 0.2);
        color: var(--text-dark);
        outline: none;
        }

        .form-control::placeholder {
        color: var(--text-dark);
        opacity: 0.7;
        }

        .form-select option {
        background: var(--card-bg);
        color: var(--text-dark);
        }

        /* زر التسجيل */
        .btn-register {
        background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
        border: none;
        border-radius: 12px;
        color: white;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        width: 100%;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        }

        .btn-register:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(0, 119, 182, 0.4);
        }

        /* رابط تسجيل الدخول */
        .login-section {
        text-align: center;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(52, 58, 64, 0.2);
        }

        .login-text {
        color: var(--text-dark);
        font-size: 0.95rem;
        margin-bottom: 0;
        }

        .login-link {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
        }

        .login-link:hover {
        color: var(--secondary-color);
        }

        /* تصميم متجاوب */
       
        @@media (max-width: 768px) {
        .register-wrapper {
                flex-direction: column;
                gap: 2rem;
            }
            
            .welcome-section {
                order: 2;
            }
            
            .register-card {
                order: 1;
                max-width: 100%;
                padding: 2rem;
            }
            
            .welcome-title {
                font-size: 2rem;
            }
        }

        /* رسائل التحقق */
        .text-danger {
            color: #DC3545 !important;
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.3);
            color: #DC3545;
            border-radius: 8px;
            padding: 0.75rem;
            margin-bottom: 1.5rem;
        }
    </style>
</head>

<body>
    <div class="main-container">
        <div class="register-wrapper">
            <!-- قسم الترحيب -->
            <div class="welcome-section">
                <div class="logo-container">
                    <i class="fas fa-tint"></i>
                </div>
                <h1 class="welcome-title">نظام سقيا لإدارة المياه</h1>
                <p class="welcome-subtitle">
                    انضم إلى نظام سقيا لإدارة توزيع المياه<br>
                    أنشئ حسابك الآن واستمتع بخدماتنا المتطورة<br>
                    نظام شامل وسهل الاستخدام
                </p>
            </div>

            <!-- بطاقة التسجيل -->
            <div class="register-card">
                <div class="register-header">
                    <h2 class="register-title">إنشاء حساب جديد</h2>
                    <p class="register-subtitle">املأ البيانات التالية لإنشاء حسابك</p>
                </div>

                <form asp-action="Register" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <!-- الاسم الكامل -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FullName" class="form-label">الاسم الكامل</label>
                                <input asp-for="FullName" class="form-control" placeholder="أدخل اسمك الكامل" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- البريد الإلكتروني -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                                <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- رقم الهاتف -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="form-label">رقم الهاتف</label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="05xxxxxxxx" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- المنطقة -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RegionId" class="form-label">المنطقة</label>
                                <select asp-for="RegionId" asp-items="ViewBag.Regions" class="form-select">
                                    <option value="" disabled selected>اختر منطقتك...</option>
                                </select>
                                <span asp-validation-for="RegionId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- العنوان -->
                    <div class="form-group">
                        <label asp-for="Address" class="form-label">العنوان التفصيلي</label>
                        <textarea asp-for="Address" class="form-control" placeholder="أدخل عنوانك التفصيلي" rows="3"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <!-- نوع الحساب -->
                    <div class="form-group">
                        <label asp-for="UserType" class="form-label">نوع الحساب</label>
                        <select asp-for="UserType" class="form-select">
                            <option value="Customer">زبون</option>
                            <option value="Driver">سائق</option>
                        </select>
                        <span asp-validation-for="UserType" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <!-- كلمة المرور -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Password" class="form-label">كلمة المرور</label>
                                <input asp-for="Password" class="form-control" placeholder="••••••••" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- تأكيد كلمة المرور -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="form-label">تأكيد كلمة المرور</label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••••" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- زر التسجيل -->
                    <button type="submit" class="btn btn-register">
                        إنشاء الحساب
                    </button>

                    <!-- رابط تسجيل الدخول -->
                    <div class="login-section">
                        <p class="login-text">
                            لديك حساب بالفعل؟ <a asp-action="Login" class="login-link">سجل الدخول من هنا</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>