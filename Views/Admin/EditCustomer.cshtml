@model Customer
@{
    ViewData["Title"] = "تعديل العميل";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="unified-title h3">
                        <i class="fas fa-user-edit"></i> تعديل بيانات العميل
                    </h3>
                </div>
                <form asp-action="EditCustomer" method="post">
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="User.Id" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="unified-form-group">
                                    <label asp-for="User.FullName" class="unified-form-label">الاسم الكامل</label>
                                    <input asp-for="User.FullName" class="unified-form-control" required />
                                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="unified-form-group">
                                    <label asp-for="User.Email" class="unified-form-label">البريد الإلكتروني</label>
                                    <input asp-for="User.Email" type="email" class="unified-form-control" required />
                                    <span asp-validation-for="User.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="unified-form-group">
                                    <label asp-for="User.PhoneNumber" class="unified-form-label">رقم الهاتف</label>
                                    <input asp-for="User.PhoneNumber" class="unified-form-control" required />
                                    <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="unified-form-group">
                                    <label asp-for="RegionId" class="unified-form-label">المنطقة</label>
                                    <select asp-for="RegionId" class="unified-form-control" required>
                                        <option value="">اختر المنطقة</option>
                                        @foreach (var region in ViewBag.Regions as IEnumerable<Region>)
                                        {
                                            <option value="@region.Id" selected="@(region.Id == Model.RegionId)">@region.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="RegionId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="unified-form-group">
                            <label asp-for="User.Address" class="unified-form-label">العنوان</label>
                            <textarea asp-for="User.Address" class="unified-form-control" rows="3" required></textarea>
                            <span asp-validation-for="User.Address" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="unified-form-group">
                                    <label class="unified-form-label">تأكيد البريد الإلكتروني</label>
                                    <div class="form-check">
                                        <input asp-for="User.EmailConfirmed" type="checkbox" class="form-check-input" />
                                        <label asp-for="User.EmailConfirmed" class="form-check-label">
                                            البريد الإلكتروني مؤكد
                                        </label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="unified-form-group">
                                    <label class="unified-form-label">حالة الحساب</label>
                                    <div class="form-check">
                                        <input type="checkbox" name="IsLocked" class="form-check-input" 
                                               checked="@(Model.User.LockoutEnd != null && Model.User.LockoutEnd > DateTimeOffset.Now)" />
                                        <label class="form-check-label">
                                            حظر الحساب
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> حفظ التغييرات
                        </button>
                        <a href="/Admin/CustomerDetails/@Model.Id" class="btn btn-details">
                            <i class="fas fa-eye"></i> عرض التفاصيل
                        </a>
                        <a href="/Admin/ManageCustomers" class="btn btn-secondary">
                            <i class="fas fa-arrow-right"></i> العودة للقائمة
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

