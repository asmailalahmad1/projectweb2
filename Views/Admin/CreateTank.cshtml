@model Tank
@{
    ViewData["Title"] = "إضافة خزان جديد";
}

<!-- ======================================================= -->
<!-- ==========         Create Tank Form Styles     ========== -->
<!-- ======================================================= -->
<style>
    /* Color Palette Variables */
    :root {
        --main-blue: #0077B6;
        --sky-blue: #90E0EF;
        --white: #FFFFFF;
        --soft-gray: #E0E0E0;
        --aqua-green: #00B4D8;
        --dark-blue: #03045E;
    }

    /* Main Form Card */
    .form-card {
        background-color: var(--white);
        border: 1px solid var(--soft-gray);
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(3, 4, 94, 0.08);
        overflow: hidden;
    }

        /* Card Header */
        .form-card .card-header {
            background-color: var(--dark-blue);
            color: var(--white);
            border-bottom: none;
            padding: 1.25rem;
        }

            .form-card .card-header h4 {
                color: var(--white);
                font-weight: bold;
            }

        .form-card .card-body {
            padding: 2rem;
        }

    /* Form Elements */
    .form-label-custom {
        color: var(--dark-blue);
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-control-custom {
        display: block;
        width: 100%;
        padding: .5rem 1rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        background-color: #f7f9fc;
        border: 2px solid var(--soft-gray);
        border-radius: 8px;
        transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
    }

        .form-control-custom:focus {
            border-color: var(--main-blue);
            background-color: var(--white);
            outline: 0;
            box-shadow: 0 0 0 0.25rem rgba(0, 119, 182, 0.2);
        }

    /* Checkbox Section */
    .checkbox-group-container {
        background-color: #f7f9fc;
        border: 1px solid var(--soft-gray);
        border-radius: 8px;
        padding: 1.5rem;
    }

    .form-check-custom .form-check-input {
        border-color: var(--main-blue);
    }

        .form-check-custom .form-check-input:checked {
            background-color: var(--main-blue);
            border-color: var(--main-blue);
        }

    .form-check-custom .form-check-label {
        color: #495057;
    }

    /* Buttons */
    .btn-save {
        background-color: var(--aqua-green);
        color: var(--white);
        border: none;
        padding: 10px 25px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .btn-save:hover {
            background-color: var(--main-blue);
        }

    .btn-cancel {
        background-color: var(--soft-gray);
        color: #343a40;
        border: none;
        padding: 10px 25px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .btn-cancel:hover {
            background-color: #ced4da;
        }
</style>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card form-card">
            <div class="card-header">
                <h4><i class="fas fa-plus-circle"></i> إضافة خزان جديد</h4>
            </div>
            <div class="card-body">
                <form asp-action="CreateTank" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="form-label-custom">اسم الخزان</label>
                                <input asp-for="Name" class="form-control-custom" placeholder="أدخل اسم الخزان" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="WaterType" class="form-label-custom">نوع المياه</label>
                                <input asp-for="WaterType" class="form-control-custom" placeholder="مثال: مياه شرب" />
                                <span asp-validation-for="WaterType" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Capacity" class="form-label-custom">السعة (لتر)</label>
                                <input asp-for="Capacity" class="form-control-custom" type="number" />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="PricePerBarrel" class="form-label-custom">السعر لكل برميل</label>
                                <input asp-for="PricePerBarrel" class="form-control-custom" type="number" step="0.01" />
                                <span asp-validation-for="PricePerBarrel" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Location" class="form-label-custom">الموقع</label>
                        <input asp-for="Location" class="form-control-custom" placeholder="أدخل موقع الخزان" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label-custom">المناطق المخدومة</label>
                        <div class="checkbox-group-container">
                            <div class="row">
                                @if (ViewBag.Regions != null)
                                {
                                    @foreach (var region in (List<Region>)ViewBag.Regions)
                                    {
                                        <div class="col-md-4">
                                            <div class="form-check form-check-custom">
                                                <input class="form-check-input" type="checkbox" name="selectedRegions" value="@region.Id" id="region@(region.Id)" />
                                                <label class="form-check-label" for="region@(region.Id)">
                                                    @region.Name
                                                </label>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">لا توجد مناطق لإضافتها. يرجى إضافة مناطق أولاً.</p>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a href="@Url.Action("ManageTanks")" class="btn btn-cancel">
                            <i class="fas fa-arrow-left"></i> العودة
                        </a>
                        <button type="submit" class="btn btn-save">
                            <i class="fas fa-save"></i> حفظ
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}